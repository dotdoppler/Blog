<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.doppler.blog.mappers.SettingMapper">
    <select id="find" useCache="true" resultType="Setting">
        SELECT * FROM setting
    </select>
    <update id="updateSetting" flushCache="true" parameterType="Setting">
        UPDATE setting SET siteName = #{siteName},slogan = #{slogan},notification = #{notification}
        WHERE id = 1
    </update>
</mapper>